# Tulpar Express Bot - Environment Variables

# ===================
# Telegram Bot (CRM)
# ===================
TELEGRAM_BOT_TOKEN=your_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id_here

# ===================
# Google Sheets
# ===================
GOOGLE_SHEETS_ID=your_spreadsheet_id_here
GOOGLE_CREDENTIALS_PATH=./docker/google-service-account.json

# ===================
# PostgreSQL (required for autopost)
# ===================
DATABASE_URL=postgresql://user:password@host:5432/database

# ===================
# Pricing (CRM)
# ===================
USD_PER_KG=1.2

# ===================
# Payment API (O-Dengi / dengi.kg)
# ===================
DENGI_API_URL=https://api.dengi.o.kg/api/json/json.php
DENGI_SID=your_merchant_id_here
DENGI_PASSWORD=your_merchant_password_here
DENGI_MERCHANT_NAME=Tulpar Express
DENGI_API_VERSION=1005
DENGI_TEST_MODE=true

# ===================
# Autopost Module
# ===================
# Enable/disable autopost feature
AUTOPOST_ENABLED=false

# Separate channel for autoposting (for testing)
AUTOPOST_CHANNEL_ID=@your_test_channel

# RapidAPI key for Pinduoduo product API
RAPIDAPI_KEY=your_rapidapi_key_here

# OpenRouter API for text generation
OPENROUTER_API_KEY=your_openrouter_key_here

# Posting schedule
AUTOPOST_TIME=19:00
AUTOPOST_TIMEZONE=Asia/Bishkek

# Product settings
AUTOPOST_MAX_PRODUCTS=10
AUTOPOST_MIN_DISCOUNT=0
AUTOPOST_MIN_RATING=0
AUTOPOST_TOP_LIMIT=10

# Contact for orders
AUTOPOST_CONTACT_USERNAME=Ruslyandiy

# Instagram (optional, not active)
# INSTAGRAM_ACCESS_TOKEN=
# INSTAGRAM_ACCOUNT_ID=
