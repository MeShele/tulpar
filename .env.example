# Tulpar Express Bot - Environment Variables

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id_here

# Google Sheets
GOOGLE_SHEETS_ID=your_spreadsheet_id_here
GOOGLE_CREDENTIALS_PATH=./docker/google-service-account.json

# PostgreSQL (optional - for dual-write)
DATABASE_URL=postgresql://user:password@host:5432/database

# Pricing
USD_PER_KG=1.2

# Payment API (O-Dengi / dengi.kg)
# Working API endpoint
DENGI_API_URL=https://api.dengi.o.kg/api/json/json.php
DENGI_SID=your_merchant_id_here
DENGI_PASSWORD=your_merchant_password_here
DENGI_MERCHANT_NAME=Tulpar Express
DENGI_API_VERSION=1005
DENGI_TEST_MODE=true
